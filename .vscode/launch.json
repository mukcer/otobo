{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch App Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/app",
      "env": {
        "JWT_SECRET": "your-jwt-secret",
        "PORT": "3000"
      },
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Launch Frontend Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/frontend",
      "env": {
        "PORT": "3001"
      },
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Launch Admin Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/admin",
      "env": {
        "ADMIN_PORT": "3002"
      },
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Attach to Docker (dlv)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/root",
      "port": 40000,
      "host": "127.0.0.1",
      "cwd": "${workspaceFolder}/cmd/frontend",
      "showLog": true,
      "trace": "verbose",
      "apiVersion": 2,
      "debugAdapter": "dlv-dap",
      "substitutePath": [
         { 
            "from": "/home/wein/otobo/",
            "to": "/home/wein/otobo/"
         },
        ],
      "dlvLoadConfig": {
        "followPointers": true,
        "maxVariableRecurse": 1,
        "maxStringLen": 1000,
        "maxArrayValues": 100,
        "maxStructFields": -1
      }
    }
  ]
}